@using Store.Models
@model List<Watch>
@{
    ViewBag.Title = "Home Page";
}

<nav class="navbar navbar-expand-sm navbar-light bg-light sticky-top">
    <a class="navbar-brand" href="#">
        <img src="~/images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
        WatchStore
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto" id="location">
            @Html.Action("Location")
        </ul>
        <a href="/Cart" class="btn btn-outline-dark my-2 my-sm-0" type="submit">
            <i class="fas fa-shopping-cart"></i>
            Cart
            <span id="badge" class="badge badge-secondary">@{
                    if (ViewBag.Badge != null && ViewBag.Badge != 0)
                    {
                        <text>@ViewBag.Badge</text>
                    }
                }</span>
        </a>
    </div>
</nav>
<div class="container">
    <div id="carouselExampleCaptions" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/carousel/1.jpg" class="img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>First slide label</h5>
                    <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel/1.jpg" class="img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Second slide label</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/carousel/1.jpg" class="img-fluid" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Third slide label</h5>
                    <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container">

        <div class="row align-items-center my-2">
            <span class="mx-2" style="font-weight: bold;">Sort by: </span>
            <select class="form-control col-md-2 sortby mx-2" id="exampleFormControlSelect1">
                <option value="0" selected>Choose...</option>
                <option value="1">Name ↓</option>
                <option value="2">Name ↑</option>
                <option value="3">Price ↓</option>
                <option value="4">Price ↑</option>
            </select>
        </div>
        <div class="row align-items-center my-2 ">
            <span class="mx-2" style="font-weight: bold;">Filter: </span>
            <div>
                Price from
                <input type="text" class="mx-1" style="width: 70px;" value="0">
                to <input type="text" class="mx-1" style="width: 70px;" value="500">
            </div>
        </div>
        <div class="row align-items-center my-2">
            <div class="btn-group btn-group-toggle ml-2 my-2" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input class="filter-btn" type="radio" name="gender" value="0" data-gender="0" id="option1"
                           autocomplete="off" checked> All
                </label>
                <label class="btn btn-secondary">
                    <input class="filter-btn" type="radio" name="gender" value="1" data-gender="1" id="option2"
                           autocomplete="off"> Men
                </label>
                <label class="btn btn-secondary">
                    <input class="filter-btn" type="radio" name="gender" value="2" data-gender="2" id="option3"
                           autocomplete="off"> Women
                </label>
            </div>
            <div class="btn-group btn-group-toggle ml-2 my-2" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input class="filter-btn" type="radio" name="type" value="0" data-type="0" id="option1" autocomplete="off"
                           checked> All
                </label>
                <label class="btn btn-secondary">
                    <input class="filter-btn" type="radio" name="type" value="1" data-type="1" id="option2"
                           autocomplete="off"> Sport
                </label>
                <label class="btn btn-secondary">
                    <input class="filter-btn" type="radio" name="type" value="2" data-type="2" id="option3"
                           autocomplete="off"> Classic
                </label>
            </div>
        </div>
        <div class="row align-items-center my-2 ">
            <button id="apply_button" type="button" class="btn btn-secondary ml-2">Apply</button>
        </div>


        <div id="goods" class="row row-cols-1 row-cols-md-2 row-cols-xl-3">
            @foreach (var w in Model)
            {
                <div class="col px-0 item">
                    <div class="card mx-2 my-2">
                        <div class="row no-gutters align-items-center">
                            <div class="col-4">
                                <img src="@w.Img"
                                     class="card-img" alt="...">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title">@w.Brand</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@w.Model</h6>
                                    <p class="card-text">@w.Descr</p>
                                    <div style="display: flex; align-items: center; justify-content: space-between;">
                                        <strong class="mx-1" style="font-size: 1.2rem;">$@w.Price</strong>
                                        <a href="#" class="tocart btn btn-outline-dark" data-cardid="@w.Id">
                                            To cart <i class="fas fa-cart-arrow-down"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
